<aura:component >
 
    <aura:attribute name="message" type="String"/><br/>
 
    <p><b>Message of the day: </b><ui:outputText value="{!v.message}"/></p><br/>
 
    <div>
        <ui:button label="You look nice today."
            press="{!c.handleClick}"/>
 
        <ui:button label="Today is going to be a great day!"
            press="{!c.handleClick}"/>
    </div>
 
</aura:component>